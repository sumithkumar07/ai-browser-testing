{
  "name": "fellow-ai-browser",
  "version": "2.0.0",
  "description": "KAiro Desktop Browser - AI-Powered Desktop Application (No Web Dependencies)",
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron . --no-sandbox",
    "build": "npm run build:react && npm run build:electron",
    "build:react": "vite build",
    "build:electron": "electron-builder",
    "dist": "npm run build && electron-builder --publish=never",
    "dist:win": "npm run build && electron-builder --win --publish=never",
    "dist:mac": "npm run build && electron-builder --mac --publish=never",
    "dist:linux": "npm run build && electron-builder --linux --publish=never",
    "test": "jest",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write src/**/*.{ts,tsx,css}"
  },
  "keywords": [
    "browser",
    "ai",
    "electron",
    "react",
    "typescript",
    "agentic",
    "intelligent"
  ],
  "author": "KAiro Browser Team",
  "license": "MIT",
  "dependencies": {
    "@types/dompurify": "^3.0.5",
    "@vitejs/plugin-react": "^4.0.0",
    "axios": "^1.6.0",
    "better-sqlite3": "^12.2.0",
    "crypto-js": "^4.2.0",
    "dompurify": "^3.2.6",
    "dotenv": "^16.3.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.0",
    "groq-sdk": "^0.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.0.0",
    "vite": "^7.1.4",
    "zod": "^4.1.5",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.2.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "electron": "^38.0.0",
    "electron-builder": "^24.6.0",
    "eslint": "^8.50.0",
    "eslint-plugin-react": "^7.37.5",
    "jest": "^29.7.0",
    "prettier": "^3.0.0"
  },
  "build": {
    "appId": "com.kairo.browser",
    "productName": "KAiro Browser",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
